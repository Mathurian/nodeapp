  approvedAt      DateTime?
  rejectedBy      String?
  rejectedAt      DateTime?
  rejectionReason String?
  status          RequestStatus @default(PENDING)
  tenantId        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

