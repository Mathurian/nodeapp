# Docker Compose Environment Variables
# Copy this file to .env.docker and update with your values

# Database Configuration
DB_USER=event_manager
DB_PASSWORD=secure_password_here
DB_NAME=event_manager
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_here
REDIS_PORT=6379

# ClamAV Configuration
CLAMAV_PORT=3310
CLAMAV_ENABLED=true

# Application Configuration
NODE_ENV=production
PORT=3000

# Secrets (Required - Generate strong random values)
JWT_SECRET=generate_a_very_long_random_secret_key_here
SESSION_SECRET=generate_another_long_random_secret_key_here
CSRF_SECRET=generate_third_long_random_secret_key_here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
ENABLE_METRICS=true

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# AWS Configuration (Optional - for AWS Secrets Manager)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Secrets Management
SECRETS_PROVIDER=local  # Options: local, env, aws, vault
SECRETS_MASTER_KEY=  # For local provider - generate with: npm run secrets -- init
