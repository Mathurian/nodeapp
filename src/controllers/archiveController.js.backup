const archiveItem = async (req, res) => {
  const log = createRequestLogger(req, 'archive')
  try {
    const { type, id } = req.params
    const { reason } = req.body

    const archive = await prisma.archivedEvent.create({
      data: {
        eventId: id,
        reason,
        archivedBy: req.user.id
      }
    })

    res.json(archive)
  } catch (error) {
    log.error('Archive item error:', error, { error: error.message, stack: error.stack })
    res.status(500).json({ error: 'Internal server error' })
  }
}

const restoreItem = async (req, res) => {
  const log = createRequestLogger(req, 'archive')
  try {
    const { type, id } = req.params

    await prisma.archivedEvent.deleteMany({
      where: {
        eventId: id
      }
    })

    res.json({ message: 'Item restored successfully' })
  } catch (error) {
    log.error('Restore item error:', error, { error: error.message, stack: error.stack })
    res.status(500).json({ error: 'Internal server error' })
  }
}

const deleteArchivedItem = async (req, res) => {
  const log = createRequestLogger(req, 'archive')
  try {
